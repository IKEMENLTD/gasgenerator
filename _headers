# Global security headers - A+ Grade Configuration
/*
  # Content Security Policy (XSS保護 - 最重要)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://unpkg.com https://cdnjs.cloudflare.com https://cdn.tailwindcss.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://unpkg.com https://fonts.googleapis.com https://cdnjs.cloudflare.com https://cdn.tailwindcss.com; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com data:; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co https://www.google-analytics.com https://api64.ipify.org https://api.ipify.org; frame-src https://www.youtube.com https://www.youtube-nocookie.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://taskmateai.net; upgrade-insecure-requests; block-all-mixed-content

  # Clickjacking保護
  X-Frame-Options: DENY

  # MIME type sniffing防止
  X-Content-Type-Options: nosniff

  # XSSフィルター有効化（レガシーブラウザ用）
  X-XSS-Protection: 1; mode=block

  # Referrer Policy（プライバシー保護 - 強化）
  Referrer-Policy: strict-origin-when-cross-origin

  # HTTPS強制（2年間 + preload）
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # 不要な機能を無効化（プライバシー保護 - 強化）
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=(), interest-cohort=(), browsing-topics=()

  # Cross-Origin Policies（強化）
  Cross-Origin-Embedder-Policy: credentialless
  Cross-Origin-Opener-Policy: same-origin-allow-popups
  Cross-Origin-Resource-Policy: same-origin

  # Cache Control for HTML
  Cache-Control: no-cache, no-store, must-revalidate

# Admin pages - no cache
/admin/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Tracking pages - short cache
/t/*
  Cache-Control: public, max-age=300

# Functions CORS headers and security
# SECURITY: Restrict CORS to specific domains only
/.netlify/functions/*
  Access-Control-Allow-Origin: https://taskmateai.net
  Access-Control-Allow-Headers: Content-Type, Authorization, X-Agency-Id, X-CSRF-Token, X-Line-Signature
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Credentials: true
  Cache-Control: no-store, no-cache, must-revalidate, private
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY