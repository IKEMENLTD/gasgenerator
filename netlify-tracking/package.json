    "stripe": "^14.5.0",
    "@sendgrid/mail": "^8.1.6"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24"
  },
  "engines": {
    "node": ">=18.0.0"
  },
