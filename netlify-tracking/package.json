{
  "name": "taskmate-tracking-system",
  "version": "1.0.0",
  "description": "Comprehensive tracking management system for TaskMate AI on Netlify with LINE integration",
  "main": "index.js",
  "scripts": {
    "build": "npx tailwindcss -i ./css/input.css -o ./css/output.css --minify",
    "build:watch": "npx tailwindcss -i ./css/input.css -o ./css/output.css --watch",
    "dev": "netlify dev",
    "deploy": "npm run build && netlify deploy --prod",
    "test": "echo 'No tests specified'"
