# TaskMate AI Tracking System Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Secret for Authentication
JWT_SECRET=your-secret-key-here-at-least-32-characters-long

# LINE API Configuration
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_OFFICIAL_URL=https://line.me/R/ti/p/@your-line-id

# Stripe Configuration (for payment tracking)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$10$YourBcryptHashHere

# Application Configuration
APP_URL=https://taskmateai.net
TRACKING_BASE_URL=https://taskmateai.net/t/

# Optional: Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@taskmateai.net